<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ngothi.checksheet">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Spection Check"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.CheckActivity"
            android:label="@string/title_activity_check"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.SheetActivity"/>
        <activity android:name=".ui.activity.HistoryActivity"
            android:label="@string/title_activity_history" />
        <activity android:name=".ui.activity.paperSheetActivity" />
        <activity
            android:name=".ui.activity.ScanActivity"
            android:label="@string/title_activity_scan" />
        <activity android:name=".ui.activity.KHistoryActivity"
            android:label="@string/title_activity_history" />
        <activity android:name=".ui.activity.CameraActivity"></activity>
        <activity android:name=".ui.activity.KHistoryDetailActivity"/>
    </application>

</manifest>