<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ngothi.checksheet.ui.activity.CheckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/check1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/canhcua"
            android:onClick="check1"
            android:text="1"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/check2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/lopoto"
            android:text="2"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/check3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/denpha"
            android:text="3"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/check4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="4"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/check5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="5"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/check6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="6"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/check7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="7"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/check8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="8"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/check9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="9"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/check10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="10"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/check11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="11"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/check12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="12"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/quaylai3"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:onClick="quaylai3"
            android:text="QUAY LẠI"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/ketthuc3"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:onClick="ketthuc3"
            android:text="KẾT THÚC"
            android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>
