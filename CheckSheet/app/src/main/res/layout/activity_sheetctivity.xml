<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ngothi.checksheet.ui.activity.Sheetctivity"
    >
    <LinearLayout
        android:id="@+id/lyTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            />
        <ImageView
            android:id="@+id/icon_check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/canhcua"
            />
        <TextView
            android:id="@+id/textSeq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/ok1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:onClick="ok1"
            android:text="OK"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/NG"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:onClick="NG1"
            android:text="NG"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/chup"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:onClick="chup1"
            android:text="chá»¥p"
            android:textSize="24sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lyImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lyBottom"
        android:layout_below="@id/lyTop"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        >
        <com.example.ngothi.checksheet.ui.activity.view.ImageDrawing
            android:id="@+id/image12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/canhcua"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

</RelativeLayout>
