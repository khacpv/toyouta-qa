<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ngothi.checksheet.ui.activity.paperSheetActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Seq.="
    android:textSize="40sp"
    android:id="@+id/in_seq"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----------------------------------------------------------------------------------"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="34sp"
            android:text="Check 1 |"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="34sp"
            android:id="@+id/p_check1"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----------------------------------------------------------------------------------" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="34sp"
            android:text="Check 2 |"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="34sp"
            android:id="@+id/p_check2"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--------------------------------------------------------------------------------------" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="34sp"
            android:text="Check 3 |"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="34sp"
            android:id="@+id/p_check3"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----------------------------------------------------------------------------------------" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="40dp"
        android:text="Xong"
        android:textSize="30sp"
        android:id="@+id/xong1"
        android:onClick="xong"/>
</LinearLayout>
</LinearLayout>
