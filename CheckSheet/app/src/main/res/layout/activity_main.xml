<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.ngothi.checksheet.ui.activity.MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/toyota_logo"
        android:gravity="center" />

    <Button
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button_main"
        android:gravity="center"
        android:onClick="scanClick"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/scan_model"
        android:textColor="#1B24C4"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_main"
        android:gravity="center"
        android:onClick="historyClick"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/review"
        android:textColor="#1B24C4"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_main"
        android:gravity="center"
        android:onClick="settingClick"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/setting"
        android:textColor="#1B24C4"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>
