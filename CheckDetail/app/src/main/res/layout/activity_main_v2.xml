<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.toyota.checkdetail.feature.main.MainV2Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/tv_sequence"
            style="@style/ProductInfo"
            tools:text="SEQ: 1H8239040420"/>

        <TextView
            android:id="@+id/tv_grade"
            style="@style/ProductInfo"
            android:background="@drawable/border_left"
            tools:text="GRADE: CV"/>

        <TextView
            android:id="@+id/tv_process"
            style="@style/ProductInfo"
            android:background="@drawable/border_left"
            tools:text="PROCESS: SF-RH"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <vn.com.toyota.checkdetail.activity.view.TouchImageView
            android:id="@+id/iv_car_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:longClickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
